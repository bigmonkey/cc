<% # title and description for seo %>
<% content_for :seotags do %>
	<title>CardCred: The Top Credit Cards for Bad Credit</title>
	<meta name="description" content="Compare the top Credit Cards for Bad Credit. Find and sign up for the one best for you. Get started now."/>
<% end %>

	<div id = "lpWrapper">	

		<header>
			<div class = "lpHeader"><%= image_tag("logo-sm.png")%></div>
		</header>
		
		<section id="lpMainContent">	

		<div class="topCardBanner">Sign Up for the <b>Top Card for Bad Credit</b>. No Credit Requirements!</div>
		<div class="topCardBox">
			<div class="topCardBoxLeft">
				<h1>Most Popular Secured Credit Card</h1>
				<h2>First Progress Platinum Elite MasterCard® Secured Credit Card</h2>
				<ul>
					<li>&nbsp;&nbsp;&nbsp;&nbsp;Low $29 Annual Fee. No Credit Requirements for Approval!</li>
					<li>&nbsp;&nbsp;&nbsp;&nbsp;Credit Card Secured by Fully-Refundable Deposit.</li>
