<% # This is the main layout used for all public facing views %>

<!DOCTYPE html><!-- HTML 5 -->
<html dir="ltr" lang="en-US">

<head>

	<meta name="robots" content="noindex, nofollow">

	<% if content_for?(:seotags) %>
	<%= yield :seotags %>
	<% else %>
	<title>The Payday Hound: Payday Loan Reviews and Independent Rankings</title>
	<meta name="description" content="Detailed, fair, independent reviews and rankings of payday and installment loans. The Payday Hound reviews more online payday loans than anyone else we know."/>
	<% end %>

	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<link rel="pingback" href="http://www.thepaydayhound.com/xmlrpc.php" />
	<link rel="canonical" href="http://www.thepaydayhound.com/" />
	<link rel="alternate" type="application/rss+xml" title="The Payday Hound &raquo; Feed" href="http://www.thepaydayhound.com/feed/" />
	<link rel="alternate" type="application/rss+xml" title="The Payday Hound &raquo; Comments Feed" href="http://www.thepaydayhound.com/comments/feed/" />
		
	<%= stylesheet_link_tag    "application", :media => "all" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
   	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>

<body>

<div id="container">
	<div id="mainHeaderOutter">
	<header id="mainHeader">
		<div id="logo"><%= link_to(image_tag("thepaydayhound-logo.png", :alt => "logo" ), {:controller => 'homes', :action => 'index'})%></div>
		<div id="socialmediaicons">
			<%= link_to(image_tag("rss.png", :alt => "RSS Feed" ), "http://www.thepaydayhound.com/feed", :title => "The Payday Hound Feed") %>
			<%= link_to(image_tag("facebook.png", :alt => "Facebook" ), "http://www.facebook.com/thepaydayhound", :title => "The Payday Hound Facebook Page") %>
			<%= link_to(image_tag("twitter.png", :alt => "Twitter" ), "http://www.twitter.com/thepaydayhound", :title => "The Payday Hound Twitter Page") %>
			<%= link_to(image_tag("googleplus.png", :alt => "Google +" ), "https://plus.google.com/114318301384219988110", :title => "The Payday Hound Google Page") %>
 		</div>
		<nav>
			<ul>
				<li><%= link_to("Home", {:controller => 'homes', :action => 'index'}) %></li>
				<li><%= link_to("Payday Loans", {:controller => 'lenders', :action => 'index'}) %></li>
				<li><%= link_to("Installment Loans", {:controller => 'lenders', :action => 'installment'}) %></li>
				<li><%= link_to("Apply Direct", "http://payday-loan-apply.thepaydayhound.com") %></li>
				<li><a href="http://www.thepaydayhound.com/resources" >Resources</a></li>
			</ul>			
		</nav>
	</header>
	</div>
<!-- everything between header and footer -->

<%= yield %>

<!-- wrap everything between header and footer -->		
	<footer>
		<ul>
			 <li><%= link_to("About Us", {:controller => 'infos', :action => 'about'}) %> | </li>
			 <li><%= link_to("Contact Us", {:controller => 'infos', :action => 'contact'}) %> | </li>
			 <li><%= link_to("Jobs", {:controller => 'infos', :action => 'jobs'}) %> | </li>
			 <li><%= link_to("Press", {:controller => 'infos', :action => 'press'}) %> | </li>    			    
			 <li><%= link_to("Privacy Policy", {:controller => 'infos', :action => 'privacy'}) %> | </li>    
			 <li><%= link_to("Terms of Use", {:controller => 'infos', :action => 'terms'}) %></li> 	    
		</ul>
		<div id="copyright">Copyright Â© 2012 The Payday Hound. All rights reserved.</div>
		 <div id="disclaimer">*Disclaimer: We aim to keep information accurate and up to date, however we cannot make warranties regarding the accuracy of our information. Please verify state licensing, fees, interest rates, and other lending terms during the application process. The Payday Hound may be compensated if consumers choose to utilize some of the links located throughout the content on this site and generate sales for the said merchant.</div>	
    </footer>  	
</body>
</html>
